  </footer>  <script>
    // Utilities
    const $ = (sel, ctx=document) => ctx.querySelector(sel);

    // Project Title handling
    const projectTitleInput = $('#projectTitle');
    const brandText = $('#brandText');
    const applyTitleBtn = $('#applyTitle');

    // Load from localStorage if present
    const saved = localStorage.getItem('projectTitle');
    if(saved){ projectTitleInput.value = saved; brandText.textContent = saved; }

    applyTitleBtn.addEventListener('click', ()=>{
      const val = projectTitleInput.value.trim();
      if(!val){ alert('Please enter a project title.'); return; }
      brandText.textContent = val;
      localStorage.setItem('projectTitle', val);
    });

    // Year
    $('#year').textContent = new Date().getFullYear();

    // Add & clear project cards
    const grid = $('#grid');
    $('#addCard').addEventListener('click', ()=>{
      const title = prompt('Project name?');
      if(!title) return;
      const desc = prompt('One‑line description?') || '—';
      const url = prompt('Project link (https://...)');
      const tag = prompt('Tag (e.g., Campaign, Brand, Film)') || 'Case Study';
      const img = prompt('Image URL (https://...)\nTip: Unsplash works great!') || 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?q=80&w=1400&auto=format&fit=crop';

      const card = document.createElement('article');
      card.className = 'card';
      card.innerHTML = `
        <a class="thumb" ${url?`href="${url}" target="_blank" rel="noreferrer noopener"`:''}>
          <img src="${img}" alt="${title}">
          <span class="chip">${tag}</span>
        </a>
        <div class="meta">
          <h3>${title}</h3>
          <p>${desc}</p>
        </div>`;
      grid.prepend(card);
      persistGrid();
    });

    $('#clearCards').addEventListener('click', ()=>{
      if(confirm('Remove all added projects? (Example cards remain unless you delete them manually)')){
        // Remove only cards we added (marked by data-added)
        grid.querySelectorAll('[data-added]')?.forEach(el=>el.remove());
        // Or clear everything added since last persist
        const nodes = [...grid.children];
        nodes.forEach(n=>{ if(n.hasAttribute('data-user')) n.remove(); });
        localStorage.removeItem('userCards');
      }
    });

    // Persistence for user-added cards
    function persistGrid(){
      const userCards = [];
      grid.querySelectorAll('.card').forEach(card=>{
        if(!card.matches('.example')){ card.setAttribute('data-user',''); }
      });
      grid.querySelectorAll('[data-user]').forEach(card=>{
        const img = card.querySelector('img')?.src || '';
        const title = card.querySelector('h3')?.textContent || '';
        const desc = card.querySelector('p')?.textContent || '';
        const tag = card.querySelector('.chip')?.textContent || '';
        const link = card.querySelector('a.thumb')?.getAttribute('href') || '';
        userCards.push({img,title,desc,tag,link});
      });
      localStorage.setItem('userCards', JSON.stringify(userCards));
    }

    // Restore user-added cards on load
    (function restore(){
      const raw = localStorage.getItem('userCards');
      if(!raw) return;
      try{
        const arr = JSON.parse(raw);
        arr.forEach(({img,title,desc,tag,link})=>{
          const card = document.createElement('article');
          card.className = 'card';
          card.setAttribute('data-user','');
          card.innerHTML = `
            <a class="thumb" ${link?`href="${link}" target="_blank" rel="noreferrer noopener"`:''}>
              <img src="${img}" alt="${title}">
              <span class="chip">${tag}</span>
            </a>
            <div class="meta">
              <h3>${title}</h3>
              <p>${desc}</p>
            </div>`;
          grid.prepend(card);
        });
      }catch(e){ console.warn('Could not restore cards', e); }
    })();

    // Download this page as an HTML file
    $('#downloadBtn').addEventListener('click', ()=>{
      const blob = new Blob([document.documentElement.outerHTML], {type:'text/html'});
      const a = document.createElement('a');
      a.href = URL.createObjectURL(blob);
      a.download = 'art-director-portfolio.html';
      document.body.appendChild(a); a.click(); a.remove();
    });
  </script></body>
</html>
